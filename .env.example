# Doctor Who Library Configuration

# Application
APP_NAME="Doctor Who Library"
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:3001","http://127.0.0.1:3001"]

# Data Paths
DATA_DIR=data
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
LIBRARY_FILE=doctor_who_library.json

# TARDIS Wiki Configuration
WIKI_BASE_URL=https://tardis.wiki/wiki/
WIKI_API_URL=https://tardis.wiki/api.php
WIKI_USER_AGENT=DoctorWhoApp/1.0 (https://github.com/doctor-who-library)
WIKI_REQUEST_DELAY=0.1
WIKI_TIMEOUT=30
WIKI_MAX_RETRIES=3

# Metadata Fetching
METADATA_CONFIDENCE_THRESHOLD=0.5
METADATA_MAX_DISAMBIGUATION=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
# LOG_FILE=app.log

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600